<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    tools:context=".Profile">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="30dp"
        >
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/editProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_edit_square_24"
            android:layout_gravity="end"
            app:tint="@color/black"
            android:contentDescription="editProfileImageButton"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="10dp"
        >


        <Button
            android:id="@+id/userNameProfile"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="username   "
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_edit_square_24"
            app:iconGravity="end"
            android:layout_gravity="center_horizontal"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/locationProfile"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Город: Москва   "
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_edit_square_24"
            android:layout_gravity="center_horizontal"
            app:iconGravity="end"
            app:iconTint="@color/black" />
        <Button
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Личная Информация"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_play_arrow_24"
            app:iconGravity="end"
            app:iconSize="25dp"
            app:iconTint="@color/black" />
        <Button
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/transparent"
            android:text="События"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_play_arrow_24"
            app:iconGravity="end"
            app:iconSize="25dp"
            app:iconTint="@color/black" />
        <Button
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Друзья"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_play_arrow_24"
            app:iconGravity="end"
            app:iconSize="25dp"
            app:iconTint="@color/black" />
        <Button
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Поддержка"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_play_arrow_24"
            app:iconGravity="end"
            app:iconSize="25dp"
            app:iconTint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:pointerIcon="none">


    </LinearLayout>

</FrameLayout>