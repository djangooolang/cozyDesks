<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EndRegister">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Завершение Регистрации"
        android:layout_gravity="center_horizontal"
        android:gravity="center|bottom"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/regSurName"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_rounded_text_field"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:hint="Фамилия"
        android:paddingLeft="10dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/regUserName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_rounded_text_field"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:hint="Имя"
        android:paddingLeft="10dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/regPassword"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_rounded_text_field"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:hint="Пароль"
        android:paddingLeft="10dp"
        android:textSize="20dp" />
    <Button
        android:id="@+id/regButton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"

        android:layout_marginBottom="20dp"
        android:backgroundTint="#A1A1A1"
        android:text="Зарагестрироваться"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBarReg"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>